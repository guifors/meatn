<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel"><strong>Start a new booking</strong></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action='/restaurants' method="get" class="mt-2">
        <div class="form-group fg">
          <label for="location">Choose a location</label>
          <input type="input" name="city" placeholder="Choose a location"class="form-control" id="location">
        </div>
        <div class="form-group fg">
          <label for="location">Date</label>
          <input type="date" name="date" class="form-control" id="date">
        </div>
        <div class="form-group fg">
          <label for="location">Time</label>
          <input type="time" name="time" class="form-control" id="time">
        </div>

        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <button type="submit" class="btn btn-primary">Search for restaurants</button>
      </form>

      </div>
    </div>
  </div>
</div>
